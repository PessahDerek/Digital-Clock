<AppLayout>:

    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'background.png'
        Label:
            id: timeScreen
            text: root.display_time
            size_hint: [0.9, .5]
            pos_hint: {'x':0.05, 'y':0.3}
            color: rgba(51, 255, 10, 100)
            font_size: 56
        Label:
            id: dateScreen
            text: root.display_day
            size_hint: [0.9, .2]
            pos_hint: {'x':0.05, 'y':0.1}
            color: rgba(10, 255, 239, 100)
            font_size: 22
